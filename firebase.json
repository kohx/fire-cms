{
  "hosting": {
    "public": "public",
    "cleanUrls": false,
    "trailingSlash": false,
    "rewrites": [
      {
        "source": "!**/*.@(html|css|js|png|jpg|jpeg|gif)",
        "function": "app"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions"
  },
  "storage": {
    "rules": "storage.rules"
  }
}